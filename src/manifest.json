{
    "manifest_version": 2,
    "name": "chrome-extension-url-mapper",
    "description": "A Chrome extension to map URL",
    "version": "0.1",
    "browser_action": {
        "default_icon": "gfx/folder.png",
        "default_popup": "popup/view.html"
    },
    "background": {
        "scripts": [
            "web.context.js",
            "constants.js",
            "mapoptions.js",
            "mapping.js",
            "configuration.js",
            "configmap.js",
            "background.js"
        ]
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": [
            "web.context.js",
            "constants.js",
            "mapoptions.js",
            "mapping.js",
            "configuration.js",
            "content/xhr.js"
        ],
        "run_at": "document_start"
    }],
    "permissions": [
        "tabs",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ]
}
